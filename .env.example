# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4b-it-qat
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# LLM Configuration
# Set LLM_PROVIDER to 'ollama', 'openai', or 'azure_openai'
LLM_PROVIDER=ollama

# OpenAI (if LLM_PROVIDER is openai)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (if LLM_PROVIDER is azure_openai)
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key
# AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint
# AZURE_OPENAI_API_VERSION=2024-02-01
# AZURE_OPENAI_MODEL=your_deployment_name_for_llm
# AZURE_OPENAI_EMBEDDING_MODEL=your_deployment_name_for_embeddings

# Graph Transformer
GRAPH_ALLOWED_NODES="Person,Organization,Location,Event,Concept,Document"
GRAPH_ALLOWED_RELATIONSHIPS="HAS_RELATIONSHIP,LOCATED_IN,PART_OF,MENTIONS,RELATES_TO"
